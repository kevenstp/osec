extends ../layout/layout

block header-content
  h1
    i.fas.fa-chess-board
    span Babillard
  +actions-section


block content
  +navbar
  +page-cover
  .container.h-100
    h1 Notes
    br
    .row
      each post in posts
        .col.mb-4
          .card.card-body.p-0
            .position-relative
              button.cover-image(type="button" data-toggle="modal" data-target="#postNo"+post.id style="background-image: url('/assets/test-banner.jpg');")
                .over-div.position-relative
                  .position-absolute.over-corner.flex-column
                  br
                  .text-center.text-white.mb-3.ml-2.mr-2
                    h5=post.title
                  .pb-5
              .black-filter
              .dot-filter
        .modal.fade(id="postNo"+post.id tabindex='-1' role='dialog' aria-labelledby='exampleModalLabel' aria-hidden='true')
          .modal-dialog.modal-dialog-centered(role='document')
            .modal-content(style="background-image: url('/assets/test-banner.jpg');")
              .over-div.position-relative
                .position-absolute.over-corner.flex-column
                br
                .text-center.text-white.mb-3.ml-2.mr-2
                  h5=post.title
                  br
                  p=post.content
                .pb-5
              .black-filter
              .dot-filter
  #exampleModal.modal.fade(tabindex='-1' role='dialog' aria-labelledby='exampleModalLabel' aria-hidden='true')
    .modal-dialog.modal-dialog-centered(role='document')
      .modal-content(style="background-image: url('/assets/test-banner.jpg');")
        .over-div.position-relative
          .position-absolute.over-corner.flex-column
          br
          .text-center.text-white.mb-3.ml-2.mr-2
            h5 Allo
          .pb-5
        .black-filter
        .dot-filter
  #addModal.modal.fade(tabindex='-1' role='dialog' aria-labelledby='addModalLabel' aria-hidden='true')
    .modal-dialog.modal-dialog-centered(role='document')
      .modal-content(style="background-image: url('/assets/test-banner.jpg');")
        .over-div.position-relative
          .position-absolute.over-corner.flex-column
          br
          form.form(method="POST", action="/babillard/creation")
            .row.mx-2
              .col
                .form-group
                  .form-group
                    label Titre de la publication
                    input.form-control(type='text' name="title")
            .row.mx-2
              .col
                .form-group
                  .form-group
                    label Description
                    textarea(name="content").form-control
            button.ml-4.btn.btn-light(type="submit") Cr√©er
          .pb-5
        .black-filter
        .dot-filter

